  sqlite
  the_silver_searcher
  tig
  trash
  tree
  unrar
  vim
  wget
  youtube-dl
  z
  zsh
  zsh-completions
)

applications=(
  1password
  alfred
  # atom
  audacity
  colors
  cord
  dosbox
  dropbox
  eclipse-java
  flash
  flux
  front
  github-desktop
  gitx
