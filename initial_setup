  spotify
  steam
  sublime-text
  things
  tiled
  transmission
  transmit
  vagrant
  virtualbox
  vlc
  xquartz
)

fonts=(
  font-lato
  font-lobster
  font-fira-code
)

quicklook_plugins=(
  betterzipql
  qlcolorcode
  qlmarkdown
  qlstephen # for files with no extension
  quicklook-csv
  quicklook-json
)

benched=(
  avidemux
  broomstick
  ccleaner
  ffmpegx
  file-juicer
  google-chrome # updates frequently
  handbrake
  kaleidoscope # time-limited trial
  mactex # too big
  mysqlworkbench
