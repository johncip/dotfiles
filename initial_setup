ruby_gems=(
  rails
  rubocop
  listen # work
)


## XCode Tools
xcode-select --install

## Homebrew & Homebrew Cask
ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
brew update
brew install caskroom/cask/brew-cask
export HOMEBREW_CASK_OPTS="--appdir=/Applications"
brew tap caskroom/fonts

## Ruby & rbenv
brew install rbenv ruby-build ## add eval "$(rbenv init -)" to profile once zsh is installed
rbenv install 2.2.3
gem install rails

## Libraries & Tools
brew install ${formulas[@]}
##   to enable zsh:
##   1. add /usr/local/bin/zsh to /etc/shells
##   2. run chsh -s $(which zsh)
##
##   to enable zsh-completions:
##   1. add fpath=(/usr/local/share/zsh-completions $fpath) to ~/.zshrc
##   2. run rm -f ~/.zcompdump; compinit

## OSX Applications, Fonts, Quicklook Plugins
brew cask install ${applications[@]}
brew cask install ${fonts[@]}
brew cask install ${quicklook_plugins[@]}

## Atom Plugins
# apm uninstall metrics
# apm install ${atom_packages[@]}

## Ruby Gems
gem install ${ruby_gems[@]}

## Work
vagrant plugin install vagrant-gatling-rsync

## Clean
gem cleanup
brew cleanup
brew cask cleanup
rm -rf $(brew --cache)'/*'

## Download Terminal colors (add to iTerm in-app)
wget https://raw.githubusercontent.com/mbadolato/iTerm2-Color-Schemes/master/schemes/Chalkboard.itermcolors -P ~/Downloads
