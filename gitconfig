[user]
  email = johnmikecip@gmail.com
  name = John Cipriano
[core]
  editor = vim
  pager = less -S
  excludesfile = /Users/John/.gitignore_global
[color]
  ui = true
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[alias]
  branch-name = rev-parse --abbrev-ref HEAD
  branches = branch -vv --color
  cam = commit -am
  ci = config
  ck = checkout
  cont = rebase --continue
  gone = "!git fetch --prune && git branches | grep ': gone' | awk '{print $1}'"
  grandpa = merge-base HEAD origin/master
  ids = log --format='%C(yellow)%h   %C(blue)%<(13,trunc)%an   %Creset%s %C(red)%d' --date=short --graph
  last = show --name-status
  merge-master = "!git checkout master && git pull && git ck - && git merge master"
  new-files = diff --name-only --diff-filter=A origin/master
  prune-all = "!git prune && git remote prune origin"
  publish = "!git push -u origin HEAD && hub pull-request"
  r = "!git rids"
  rebasei = "!git rebase -i `git grandpa`"
  rebase-master = "!git checkout master && git pull && git ck - && git rebase master"
  rids = log --format='%C(yellow)%h   %C(blue)%<(13,trunc)%an   %Creset%s %C(red)%d' --date=short --reverse -20
  shallow = clone --depth 1
  since = "!git rids origin/`git branch-name`..`git branch-name`"
  st = -c color.status=always status
  unstage = reset HEAD
  upstream = push -u origin HEAD
  merge-and-destroy = "!git checkout master && lastBranch=`git rev-parse --abbrev-ref @{-1}` && git merge $lastBranch && git push && git push origin :$lastBranch && git branch -D $lastBranch"
[push]
  default = upstream
[diff]
  algorithm = histogram
  compactionHeuristic = true
[pager]
  branch = true
[rerere]
  enabled = false
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[github]
	user = johncip
[ghi]
	token = !security find-internet-password -a johncip -s github.com -l 'ghi token' -w
